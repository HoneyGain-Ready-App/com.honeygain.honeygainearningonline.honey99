<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/honeygaincase99_splash5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="220dp"
            android:elevation="6dp"
            app:cardCornerRadius="50dp"
            app:strokeColor="#9D9696"
            app:strokeWidth="3dp">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:src="@drawable/honeygaincase99_logo">

            </ImageView>

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>

    <ProgressBar
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentBottom="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/honeygaincase99_progess_gradient_splash"
        android:progress="100"
        android:progressDrawable="@drawable/honeygaincase99_progess_gradient_splash" />


</RelativeLayout>